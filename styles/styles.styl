	// body

body
	margin 0
	padding 0
	font 0.75em/1.5 'Montserrat', sans-serif;
	color #272822
	padding-bottom 200px


h1
	font 300 2em/1 'Open Sans', sans-serif;
	text-indent 30px

p
	text-indent 20px

#bg-diagonal
	content ""
	position fixed
	left -2.5%
	bottom 0
	width 105%
	height 50%
	background url(../images/diagonal.svg) bottom left / 100% no-repeat
	z-index -998

	// content

.middle-block
	max-width w
	width 100%
	position absolute
	left 50%
	margin-left -(w / 2)
	margin-top 100px 
	margin-bottom 80px

#content
	background-color white
	:before
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%

		

#shadow
	position fixed
	content ""
	height 20%
	z-index -999
	box-shadow: 0px 0px 100px #B7BDC1


.render img
	width 100%

.render-holder
	border-bottom 1px solid #E9E9E9
	box-shadow 0 2px 0 #B7BDC1
	padding 20px

