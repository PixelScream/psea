#render-options 
	display block
	position absolute
	width 300px
	height 100px
	top 500px
	left 100px
	z-index 999


.render-holder
	padding 10px
	@media screen and (min-width w+1)
		padding 40 px
		
.render-holder a 
	text-decoration none
.show-more
	max-height 0
	transition max-height 1s ease-in-out
	overflow hidden
	
.break-down
	width 100%
	
.break-down.down
	max-height 200px

.down-arrow
	text-align center
	font-size 100px
	cursor pointer
.down-arrow:after
	content " breakdown"
.lazy
	transition background-image tt ease-in-out
	background-color grey

