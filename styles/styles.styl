/*

	Variables
	
*/
	// , user-scalable=no    - just storing
w = 500px
half-w = w / 2
dp-size = 150px
pale = #E4E8E9
tt = 0.33s
grey = #434439
green = #1ebf80



/*

	Mixins

*/
		
box-shadow()
	-moz-box-shadow arguments
	-webkit-box-shadow arguments
	box-shadow arguments
	
transition()
	-webkit-transition arguments
	-moz-transition arguments
	transition arguments
	
transform()
	-webkit-transform arguments
	transform arguments
	
transform-origin()
	-webkit-transform-origin arguments
	transform-origin arguments
	
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments
	
/*

	body
		
*/
html 
	//transition background-color tt ease-in-out all, color tt ease-in-out all
body
	margin 0
	padding 0
	font 12px/1.5 'Montserrat', sans-serif;
	padding-bottom 200px



h1
	font 300 22px/1.5 'Open Sans', sans-serif;
	text-align center
	letter-spacing 0.33em
	margin-bottom 0
	margin-top 20px
h2
	font 300 12px/1.5 'Open Sans', sans-serif;
	text-align center
	letter-spacing 0.05em
	margin-bottom 20px
	margin-top 0
h3
	font 300 16px/1.5 'Open Sans', sans-serif;
	text-align center
	letter-spacing 0.1em
	margin-bottom -5px
	margin-top 20px
p
	text-indent 7px

p::first-letter
	font-size 1.2em
.centered
	text-align center


#bg-diagonal
	@media screen and (min-width w+1)
		content ""
		position fixed
		left -2.5%
		bottom 0
		width 105%
		height 50%
		background url(../images/diagonal.svg) bottom left / 100% no-repeat
		z-index -998

/*
	
	content
	
*/

.middle-block
	max-width w
	width 100%
	position absolute
	left 0
	margin-left 0
	@media screen and (min-width w+1)
		margin-left -250px // ffs, minus half w
		left 50%
.vertical-buffer
	margin-top 30px 
	margin-bottom 80px
	@media screen and (min-width w+1)
		margin-top 15% 

	
.cen-just
	right 0
	left 0
	margin auto

.render img
	display: block;
	width 100%
	left 0
	right 0
	:after
		content ""
		position absolute
		z-index 999
		width 50px
		height 50px
	/* le sigh can't make it work
	:after
		z-index: 999; 
		position: absolute; 
		content: "";
		bottom: 15px;
		left: 10px;
		width: 50%; 
		top: 80%;
