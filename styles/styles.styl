/*

	Variables
	
*/
	// , user-scalable=no    - just storing
w = 500px
half-w = w / 2
dp-size = 150px
pale = #E4E8E9
tt = 0.33s
grey = #434439


/*

	Mixins

*/
		
box-shadow()
	-moz-box-shadow arguments
	-webkit-box-shadow arguments
	box-shadow arguments
	
transition()
	-webkit-transition arguments
	-moz-transition arguments
	transition arguments
	
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments
	
/*

	body
		
*/

body
	margin 0
	padding 0
	font 12px/1.5 'Montserrat', sans-serif;
	color grey
	padding-bottom 200px


h1
	font 300 22px/1.5 'Open Sans', sans-serif;
	text-align right
	text-indent 50px

p
	text-indent 20px

p::first-letter
	font-size 1.2em


#bg-diagonal
	@media screen and (min-width w+1)
		content ""
		position fixed
		left -2.5%
		bottom 0
		width 105%
		height 50%
		background url(../images/diagonal.svg) bottom left / 100% no-repeat
		z-index -998

/*
	
	content
	
*/

.middle-block
	max-width w
	width 100%
	position absolute
	left 0
	margin-left 0
	@media screen and (min-width w+1)
		margin-left -250px // ffs, minus half w
		left 50%
.vertical-buffer
	margin-top 30px 
	margin-bottom 80px
	@media screen and (min-width w+1)
		margin-top 100px 

	
.cen-just
	margin auto
	right 0
	left 0

#shadow
	@media screen and (min-width w+1)
		position fixed
		content ""
		height 20%
		z-index -999
		box-shadow: 0px 0px 100px #B7BDC1

.render img
	display: block;
	width 100%
	left 0
	right 0
	:after
		content ""
		position absolute
		z-index 999
		background-color blue
		width 50px
		height 50px
