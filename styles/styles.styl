/*

	Info

*/
#dp 
	position relative
	width dp-size
	height dp-size
	border-radius (dp-size / 2)
	background url(../images/dp.png) top left / 100% no-repeat
	margin-top (dp-size / 4) - 20px
	z-index 50

#info-block
	position absolute
	width 100%
	height dp-size * 0.9
	//background linear-gradient(to bottom, #e4e8e9 50%,#cad2d4 100%)
	margin -10px
	@media screen and (min-width w+1)
		margin -40px
	line-height 80%
#info p
	text-indent 0
	margin-top 3px
	margin-bottom 9px
		
#footer p
	text-align center
	position fixed
	margin auto
	left 0 
	right 0
	bottom 0
	z-index -100
	@media screen and (min-width w+1)
		margin-bottom 10px
	

/*

	Navigation
	
*/
#nav-container
	position fixed
	content ""
	display block
	height 67px
	z-index 90
	margin-top 0
	transition height tt ease-in-out, margin-top tt ease-in-out
	@media screen and (max-width w)
		height 45px
		visibility hidden

#nav-container.down
	height 45px


#nav-container.hid
	margin-top -45px
/*
.container, .container ul, .container ul li, .container ul li a
	height 100%
	vertical-align bottom
	text-align bottom
	*/
.container
	z-index 80
	@media screen and (min-width w+1)
		bottom 0
		bottom 0px
		position absolute
		transition margin-left tt ease-in-out, bottom tt ease-in-out
		margin-left -40px
	

.container ul 
	list-style-type none

.container ul li 
	display: inline-block;
	@media screen and (min-width w+1)
		padding-right 2px
		border-right 1px pale solid
		&:laschildt-
			border-right none

.container ul li a 
	padding-right 2px
	display block
	text-decoration none


		
#menu-button
	display block
	position absolute
	height 45px
	top 0
	right 15px
	z-index 300
	font-size 30px
	@media screen and (min-width w+1)
		visibility hidden
	
@media (max-width w) {
.container {
	z-index -200
	position absolute
	//top -100
	width: 100%;
	//margin: 0 auto;
	//padding:20px 0;
	//border 2px black solid
	overflow hidden
	max-height 0
	transition max-height tt ease-in-out
}
.container ul {
	//padding:10px;
	padding:10px;
}
.container ul li {
	display:block;
	//padding:10px 0;
	text-align center
	padding:10px 0;
	border-bottom 2px (pale + 10) solid
}
.container ul li:hover  {
	border-bottom 2px #222 solid
}

}
/*

	Procedural nav

*/
#pro-nav
	position fixed
	padding 5px
	width 15px
	height auto
	left 10px
	top 40% 
	text-align center
	z-index 999
	@media screen and (max-width w)
		visibility hidden
.pro-i
	display block
	margin-bottom 5px
	cursor pointer
	
.pro-i:hover:after
	right -110px
	content: attr(title);
	display: block;
	position: absolute;
	white-space: nowrap;
	width 100px
	text-align left
	z-index: 98;
	font-family 'Montserrat', sans-serif;
	margin-top -12px

		
.fa-menu-o:before 
	content "\f10c"

.fa-menu-o:hover:before 
	content "\f111"
	
		
#logo 
	opacity 0.8
	position relative
	right 0
	left 0
	margin auto
	top 5px
	width 300px
	height 67px
	z-index 100
	transition all tt ease-in-out
	@media screen and (max-width w)
		width 200px
		height 45px
		left 5px
		margin-left 0
	
#logo.down
	@media screen and (min-width w+1)
		width 200px
		height 45px
/*

	Mobile nav
	
*/
#small-nav
	padding 0
	margin 0
	z-index 900
	background-color rgba(255,255,255,0.5)
	position fixed
	max-width 5px
	width 100%
	height 100%
	display block
	content ""
	text-align:center;
	transition max-width 0.8s ease-in-out
	@media screen and (min-width w+1)
		visibility hidden

#small-menu
	position relative
	left -20px
	margin-left -40px
	margin 0
	margin-top 30%
	overflow hidden
#small-menu li 
	background-color rgba(255,255,255,0.9)
	display:block;
	list-style-type:none;
	padding 10px 0
	border-bottom solid 1px (grey + 150)
	&:first-child
		border-top solid 1px (grey + 150)
	a
		text-decoration none
		color grey
#small-menu-button
	cursor pointer
	position absolute
	bottom 20%
	background-color pale
	font-size 30px
	width auto
	height auto
	right -(@font-size + 5px)
	transition all 0.6s ease-out
	padding 0 10px
#small-menu-button.out
	right 0
#small-menu-button.out i:before
	content: "\f100"

	
