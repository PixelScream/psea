	:after
		z-index: 999; 
		position: absolute; 
		content: "";
		bottom: 15px;
		left: 10px;
		width: 50%; 
		top: 80%;
		max-width:300px;
		box-shadow: 0px 100px 100px #B7BDC1
	*/
#render-options 
	display block
	position absolute
	width 300px
	height 100px
	top 500px
	left 100px
	z-index 999


.render-holder
	background-color white
	border-bottom 1px solid #E9E9E9
	padding 10px
	@media screen and (min-width w+1)
		box-shadow 0 2px 1px pale
		padding 20px
/*

	Procedural

*/

.tooltip:hover
	border 1px blue solid
	:after
		content: attr(data-title);
		position absolute
		left 50%
		display block
		top auto
		margin-top 15px
	:before
		position: absolute;
		left: 50%;
		margin-left: -10px;
		width: 0;
		height: 0;
		border: solid transparent;
		border-width: 10px;
		border-color: transparent;
		border-bottom-color: #222;
		content: '';
		pointer-events: none;
		top auto
		margin-top 5px
      
/*

	Info

*/
#dp 
	position relative
	width dp-size
	height dp-size
	border-radius (dp-size / 2)
	background url(../images/dp.png) top left / 100% no-repeat
	margin-top (dp-size / 4)
	z-index 50

#info-block
	position absolute
	width 100%
	height dp-size * 0.9
	background-color pale
	background linear-gradient(to bottom, #e4e8e9 50%,#cad2d4 100%)
	margin -10px
	@media screen and (min-width w+1)
		margin -20px
		
#footer p
	text-align center
	position fixed
	margin auto
	left 0 
	right 0
	bottom 0
	z-index -100
	@media screen and (min-width w+1)
		color #BEBEBE
		margin-bottom 10px
	

/*

	Navigation
	
*/
#nav-container
	position fixed
	content ""
	display block
	height 67px
	z-index 90
	margin-top 0
	transition height tt ease-in-out, margin-top tt ease-in-out
	@media screen and (max-width w)
		background-color white
		box-shadow 0 1px 1px pale
		height 45px

#nav-container.down
	height 45px
	@media screen and (min-width w+1)
		background-color white
		box-shadow 0 1px 1px pale
#nav-container.hid
	margin-top -45px
/*
.container, .container ul, .container ul li, .container ul li a
	height 100%
	vertical-align bottom
	text-align bottom
	*/
.container
	z-index 999
	@media screen and (min-width w+1)
		bottom 0
		margin-left -20px
		position absolute
		

.container ul 
	list-style-type none

.container ul li 
	display: inline-block;
	@media screen and (min-width w+1)
		padding-right 2px
		border-right 1px pale solid
		&:last-child
			border-right none

.container ul li a 
	display block
	color grey
	text-decoration none
	@media screen and (min-width w+1)
		border-bottom 2px white solid
		//padding-right 1px

.container ul li a:hover 
	@media screen and (min-width w+1)
		border-bottom 2px #222 solid
		
#menu-button
	background-color blue
	background url(../images/menu-icon.png) top left / 100% no-repeat
	display block
	content ""
	position absolute
	height 45px
	width 45px
	top 0
	right 15px
	z-index 300
	@media screen and (min-width w+1)
		visibility hidden
	
@media (max-width w) {
.container {
	z-index -200
	position absolute
	//top -100
	background-color pale
	background linear-gradient(to bottom, #cad2d4 0%,#e4e8e9 50%)
	width: 100%;
	//margin: 0 auto;
	//padding:20px 0;
	//border 2px black solid
	overflow hidden
	max-height 0
	transition max-height tt ease-in-out
}
.container ul {
	//padding:10px;
	padding:10px;
}
.container ul li {
	display:block;
	//padding:10px 0;
	text-align center
	padding:10px 0;
	border-bottom 2px (pale + 10) solid
}
.container ul li:hover  {
	border-bottom 2px #222 solid
}

}

#logo 
	opacity 0.8
	position relative
	right 0
	left 0
	margin auto
	top 5px
	width 300px
	height 67px
	background url(../images/logo_text_dark.png) top left / 100% no-repeat
	z-index 100
	transition all tt ease-in-out
	z-index 100
	@media screen and (max-width w)
		width 200px
		height 45px
		left 5px
		margin-left 0
	
#logo.down
	@media screen and (min-width w+1)
		width 200px
		height 45px
		
